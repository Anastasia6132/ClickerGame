<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClickerGame.MainPage"
             NavigationPage.HasNavigationBar="false">


    <StackLayout Orientation="Vertical">

        <Label x:Name="myLog" AutomationId="myLogTest" VerticalOptions="Center" Margin="10"/>
        <Entry Placeholder="" x:Name="labelLog" VerticalOptions="Center"/>


        <Label x:Name="myPas" AutomationId="myPasTest" VerticalOptions="Center" Margin="10"/>
        <Entry Placeholder="" x:Name="labelPass" VerticalOptions="Center"/>
        
        <Button x:Name="myAuth"
        Clicked="OnButtonClickedLogin"
        BackgroundColor="Indigo"
        TextColor="Snow"
        CornerRadius="5"
        WidthRequest="200"
        HeightRequest="40"
        HorizontalOptions="Center"
        VerticalOptions="Center"/>
        
        <Button x:Name="myReg"
        Clicked="OnButtonClickedPassword"
        BackgroundColor="Indigo"
        TextColor="Snow"
        CornerRadius="5"
        WidthRequest="200"
        HeightRequest="40" 
        VerticalOptions="Start"
        HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>
