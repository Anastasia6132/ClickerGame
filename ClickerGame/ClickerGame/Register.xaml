<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClickerGame.Register"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="myLog" />
            <Entry Placeholder="" x:Name="labelLog"/>

            <Label x:Name="myPas"/>
            <Entry Placeholder="" x:Name="labelPass"/>

            <Label x:Name="myRepPas"/>
            <Entry Placeholder="" x:Name="labelPassRep"/>

            <Button x:Name="myReg"
        Clicked="OnButtonClickedReg"       
        BackgroundColor="Indigo"
        TextColor="Snow"
        CornerRadius="5"
        WidthRequest="200"
        HeightRequest="40"
        HorizontalOptions="Center" />
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>